<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Seller"
                    android:textColor="@color/list_product_name"
                    android:textSize="@dimen/_14sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/list_product_name"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Product Name"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <!-- <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:orientation="horizontal">

                 <com.vibrant.asp.customtext.MyTextLight
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:text="Product Rate"
                     android:textColor="@color/gray_text_dark"
                     android:textSize="@dimen/_12sdp" />

                 <com.vibrant.asp.customtext.MyTextLight
                     android:id="@+id/tvAmt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toLeftOf="@+id/tvProductRate"
                     android:text="\u20b9"
                     android:textColor="@color/gray_text_dark"
                     android:textSize="@dimen/_12sdp" />

                 <com.vibrant.asp.customtext.MyTextLight
                     android:id="@+id/tvProductRate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:paddingLeft="@dimen/_3sdp"
                     android:text=""
                     android:textColor="@color/gray_text_dark"
                     android:textSize="@dimen/_12sdp" />
             </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Date"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/llAdd">

                    <!--  <com.vibrant.asp.customtext.MyTextLight
                          android:id="@+id/tvRate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:text="Product Rate"
                          android:textColor="@color/gray_text_dark"
                          android:textSize="@dimen/_12sdp" />
  -->
                    <com.vibrant.asp.customtext.MyTextLight
                        android:id="@+id/tvAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="\u20b9"
                        android:textColor="@color/gray_text_dark"
                        android:textSize="@dimen/_12sdp" />

                    <com.vibrant.asp.customtext.MyTextLight
                        android:id="@+id/tvProductRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvAmt"
                        android:paddingLeft="@dimen/_2sdp"
                        android:text=""
                        android:textColor="@color/gray_text_dark"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_remove"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_remove" />

                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:textColor="@color/gray_text_dark"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/ic_add"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_add" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Amount"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvAmtRupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvAmount"
                    android:text="\u20b9"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="CGST"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCGSTRupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvCGST"
                    android:text="\u20b9"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="SGST"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvSGSTRupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvSGST"
                    android:text="\u20b9"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvSGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vibrant.asp.customtext.MyTextLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Total"
                    android:textColor="@color/list_product_name"
                    android:textSize="@dimen/_16sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvSGSTot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tvGrandTotal"
                    android:text="\u20b9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/list_product_name"
                    android:textSize="@dimen/_16sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bg_btn_remove_item"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Remove Item"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_remove_item"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
