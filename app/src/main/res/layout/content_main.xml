<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DashboardActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlayoutRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center">

            <com.vibrant.asp.customtext.MyTextBold
                android:id="@+id/tvWallte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/ivRupee"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tvWallte"
                android:src="@drawable/rupee_white" />

            <com.vibrant.asp.customtext.MyTextBold
                android:id="@+id/tvWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_toRightOf="@+id/ivRupee"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/rlayoutRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llrow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rlayLend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivCirLend"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/lend1"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/lend"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlRent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivCirRent"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/tractor"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/rent"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llrow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llayMutureOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivMutureO"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Muture Orders"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llConfirmedOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivConfirmedOr"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Confirmed Orders"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llrow3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llayPendingOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivPendingOrder"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Pending Orders"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rldemo4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivDemo4"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Recharge"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </LinearLayout>

                <!---->

                <LinearLayout
                    android:id="@+id/llrow4"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llaySell"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivSell"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Sell"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rldemo5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/custom_ripple_white"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivDemo5"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/file"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="@dimen/_2sdp" />

                        <com.vibrant.asp.customtext.MyTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Demo"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

