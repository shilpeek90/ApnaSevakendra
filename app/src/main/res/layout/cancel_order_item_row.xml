<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:contentPadding="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/rlayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rentee Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvNam"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayoutCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutName">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelled By :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCancelledBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvCancel"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlayoutProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutCancel">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvProductN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvProductN"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayoutAmount"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutProduct">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="Amount :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivRupee"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvAmt"
                    android:src="@drawable/rupee" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_toRightOf="@+id/ivRupee"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayoutOrderQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutAmount">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvOrderQunt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Quantity :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvOrderQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvOrderQunt"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayoutCommissionAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutOrderQuantity">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvCommision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commission Amount :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvComminAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvCommision"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayoutDistrictName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlayoutCommissionAmount">

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvDistrictNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vibrant.asp.customtext.MyTextLight
                    android:id="@+id/tvDistrictName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvDistrictNam"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>